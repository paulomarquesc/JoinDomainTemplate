{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vm": {
            "type": "string",
            "metadata": {
                "description": "Virtual machine to be domain joined."
            }
        },
        "DomainJoinUserName": {
            "type": "string",
            "metadata": {
                "description": "User name of a domain user with sufficient rights to perfom domain join operation."
            }
        },
        "DomainJoinUserPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Domain user password."
            }
        },
        "domainFQDN": {
            "type": "string",
            "metadata": {
                "description": "Domain FQDN where the virtual machine will be joined."
            }
        }
    },
    "variables": {
        "domainJoinOptions": 3
    },
    "resources": [
        {
            "comments": "Join domain - JsonADDomainExtension",
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('vm'),'/joindomain')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "JsonADDomainExtension",
                "typeHandlerVersion": "1.0",
                "settings": {
                    "Name": "[parameters('domainFQDN')]",
                    "User": "[concat(parameters('domainFQDN'), '\\', parameters('DomainJoinUserName'))]",
                    "Restart": "true",
                    "Options": "[variables('domainJoinOptions')]"
                },
                "protectedsettings": {
                    "Password": "[parameters('DomainJoinUserPassword')]"
                }
            }
        }
    ]
}
